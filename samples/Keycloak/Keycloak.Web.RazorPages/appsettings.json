{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Schemes": {
      "OpenIdConnect": {
        "ResponseType": "code", // Ensure we're configured to use the authorization code flow.
        "SaveTokens": true, // Required to save the id and access tokens returned by Keycloak for later use, including logout.
        "MapInboundClaims": false, // Prevent from mapping "sub" claim to nameidentifier.
        "Scope": [ "openid", "profile", "email", "address" ] // Request additional scopes.
      }
    }
  }
}
